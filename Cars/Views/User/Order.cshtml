@using PagedList.Mvc
@model PagedList.IPagedList<Cars.Models.Vehicle>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />
<p class="display-6 text-center fw-bold text-danger">Available Cars</p>
@if (Model != null)
{
    int x = 0;
    foreach (var vehicle in Model)
    {
        x++;
        <div class="col-lg-3 col-md-4 col-sm-12 mt-3">
            <div class="card-container card m-4 border-0 d-flex w-75" style="border-radius: 24px; margin-left:20px;">
                <img src="@Url.Content(vehicle.ImagePath)" class="card-img-top" height="230"/>
                <h4 class="text-danger text-center fw-bold text-decoration-none">@Html.ActionLink(vehicle.Model, "ViewOrder", new { id = vehicle.ID }, new { @class = "text-denger text-center fw-bold text-decolation-none" })</h4>
            </div>
        </div>
    }
    <h3 class="text-success">@x result(s) found</h3>
}
<div class="text-center mt-4">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Order", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>

