

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/js/bootstrap.bundle.js"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap" /></svg>
                    CARRENT
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li>
                        @Html.ActionLink("Home", "Index", "User", null, new { @class = "nav-link" })
                     </li>
                    <li>
                        @Html.ActionLink("Vehicles", "AvailableVehicles", "User", null, new { @class = "nav-link" })
                    </li>

                    <li>
                        @Html.ActionLink("Rent", "Order", "User", null, new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>

                </ul>
                @using (Html.BeginForm("Order", "User"))
                {
                    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                        <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..Car" aria-label="Search" spellcheck="false" autocomplete="off" />
                    </form>
                }


                <div class="text-end">
                    <button type="button" class="btn btn-outline-light me-2">
                        @if (Session["ID"] == null)
                        {
                            @Html.ActionLink("Sign Up", "Login", "User", null, new { @class = "nav-link" })
                        }
                    </button>
                    <button type="button" class="btn btn-warning">
                        @if (Session["ID"] == null)
                        {
                            @Html.ActionLink("Register", "Register", "User", null, new { @class = "nav-link" })
                        }
                    </button>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            @RenderBody()
        </div>

        <div class="row">
            <div class="col-12 text-center card-footer">
                <footer>
                    <p>&copy;@DateTime.Now.Year - CARRENT</p>
                </footer>
            </div>
        </div>
    </div>

</body>
</html>

