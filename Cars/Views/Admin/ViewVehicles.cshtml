@model PagedList.IPagedList<Cars.Models.Vehicle>
@using PagedList.Mvc
@{
    ViewBag.Title = "ViewVehicles";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<p class="display-6 text-center fw-bold text-danger">Vehicles</p>
@if (Model != null)
{
    foreach (var vehicle in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-12">
            <div class="card-container card m-4 border-0 d-flex w-75" style="border-radius: 24px; margin-left:20px;">
                <img src="@Url.Content(vehicle.ImagePath)" class="card-img-top" height="230" alt="@vehicle.Model image" />
                <h4 class="text-danger text-center fw-bold text-decoration-none">@vehicle.Model</h4>
                <p class="text-center">@vehicle.Des</p>
            </div>
        </div>
    }
}
<div class="text-center mt-4">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>