@using PagedList.Mvc
@model PagedList.IPagedList<Cars.Models.Vehicle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/PagedList.css" rel="stylesheet" />
<div class="container mt-4">
    <div class="row">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-12 mb-4">
                    <div class="card-container card border-0">
                        <img src="@Url.Content(item.ImagePath)" class="card-img-top" height="230" />
                        <div class="card-body">
                            <h4 class="card-title text-center">@Html.ActionLink(item.Model, "Order", new { id = item.ID }, new { @class = "text-danger fw-bold text-decoration-none" })</h4>
                            <div class="d-flex justify-content-center align-items-center">
                                <span class="text-success font-weight-bold mr-2">@item.Daily_hired_price</span>
                                <span class="badge badge-danger">@item.Color</span>
                                <span class="badge badge-danger">@item.Fuel_type</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <a>
    @if (Session["ID"] == null)
    {
        @Html.ActionLink("Sign Out", "SignOut", "User", null, new { @class = "nav-link" })
    }
   </a>
</div>

<div class="text-center mt-4">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>

